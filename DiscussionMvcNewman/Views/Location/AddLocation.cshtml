@model AddLocationViewModel
@{
    ViewData["Title"] = "Add Location";
}

<h1 class="my-heading">Add Location</h1>

<div asp-validation-summary="All" class="text-danger"></div>


<form asp-controller="Location" asp-action="AddLocation" method="post">
    <div class="form-group col-md-6">
        <label for="name">Name</label>
        <input type="text" name="Name" class="form-control" placeholder="Name">
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="latitude">Latitude</label>
            <input type="number" name="Latitude" class="form-control" placeholder="Latitude" step="0.0000000001">
        </div>
        <div class="form-group col-md-6">
            <label for="longitude">Longitude</label>
            <input type="number" name="Longitude" class="form-control" placeholder="Longitude" step="0.0000000001">
        </div>
    </div>
    
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="Description" rows="4" cols="50" class="form-control" placeholder="Description"></textarea>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label for="submit-image">Submit Image</label>
            <div class="custom-file">
                <input type="file" name="Image" class="custom-file-input" id="submit-image-input">
                <label class="custom-file-label" for="submit-image-input">Choose file</label>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-primary" style="color: #F7F7F7; background-color: #002855;">Add Location</button>
        </div>
    </div>

</form>


