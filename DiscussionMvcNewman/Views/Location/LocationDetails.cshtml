@model LibraryGroup13.Location

@{
    ViewData["Title"] = "LocationDetails";
}
<h1>Location Details</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="LocationDetails" method="post">

            <div class="form-group">
                <label asp-for="LocationName" class="control-label">Name</label>
                <input asp-for="LocationName" class="form-control" disabled />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Latitude" class="control-label">Latitude</label>
                <input asp-for="Latitude" class="form-control" disabled />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Longitude" class="control-label">Longitude</label>
                <input asp-for="Longitude" class="form-control" disabled />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LocationDescription" class="control-label">Description</label>
                <textarea asp-for="LocationDescription" class="form-control" disabled></textarea>
                <span asp-validation-for="LocationDescription" class="text-danger"></span>
            </div>



        </form>
    </div>
</div>




<div style="margin-top: 10px;">
    <button type="button" class="btn btn-primary custom-btn" onclick="location.href='@Url.Action("ListAllLocation")'">Back to Locations List</button>
</div>


