<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WVU Jackson's Mill</title>
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap-5.1.3-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DiscussionMvcNewman.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/07b56338d4.js" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-#002855">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color: #F7F7F7;"></a>
                <img src="~/images/WVU header.png" height="80" alt="Logo" style="padding-right: 10px;>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle"
                                    data-bs-toggle="dropdown" style="color: #F7F7F7;">
                                <i class="fa-solid fa-house"></i>
                                Home
                            </button>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </div>
                        </li>
                         <li class="nav-item dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle"
                                    data-bs-toggle="dropdown" style="color: #F7F7F7;">
                                <i class="fa-solid fa-location-dot"></i>
                                Location
                            </button>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="dropdown-menu">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Location" asp-action="ListAllLocation">Find Location Information</a>
                                   @* @if (User.IsInRole("supervisor"))*@
                                   @* {*@
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Location" asp-action="AddLocation">Add Location</a>
                                   @* }*@
                                   
                                </div>
                               
                            }
                        </li>
                        <li class="nav-item dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle"
                                    data-bs-toggle="dropdown" style="color: #F7F7F7;">
                                <i class="fa-solid fa-map"></i>
                                Map
                            </button>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Map" asp-action="CreateMapView">Map</a>

                                
                            </div>
                        </li>
                        
                            

     
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color: #F7F7F7">
            &copy; 2023 - WVU Jackson's Mill - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
